<Page x:Class="synthesis_program.Views.AddRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- 机型 -->
        <Label x:Name="lblMachineKind" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding CurrentTag.MachineKind}" Height="28"/>

        <!-- 生产批号 -->
        <Label x:Name="lblBatchNo" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding CurrentTag.BatchNo}" Height="28"/>

        <!-- 批量 -->
        <Label x:Name="lblBatchCount" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Text="{Binding CurrentTag.BatchCount}" Height="28"/>

        <!-- 版本 -->
        <Label x:Name="lblVersion" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Text="{Binding CurrentTag.Version}" Height="28"/>

        <!-- 整机料号 -->
        <Label x:Name="lblMaterialId" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="5" Text="{Binding CurrentTag.MaterialId}" Height="28"/>

        <!-- 生产编号开始 -->
        <Label x:Name="lblSequenceStart" Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="5" Text="{Binding CurrentTag.SequenceNoStart}" Height="28"/>

        <!-- 生产编号结束 -->
        <Label x:Name="lblSequenceEnd" Grid.Row="6" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1" Margin="5" Text="{Binding CurrentTag.SequenceNoEnd}" Height="28"/>

        <!-- 模板地址 -->
        <Label x:Name="lblModelAddress" Grid.Row="7" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="7" Grid.Column="1" Margin="5" Text="{Binding CurrentTag.ModelAddress}" Height="28"/>

        <!-- 序列号已生成 -->
        <Label x:Name="lblIsCreated" Grid.Row="8" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <CheckBox Grid.Row="8" Grid.Column="1" Margin="5" IsChecked="{Binding CurrentTag.IsCreated}" VerticalAlignment="Center"/>

        <!-- 关联机型 -->
        <Label x:Name="lblConnectMachine" Grid.Row="9" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="9" Grid.Column="1" Margin="5" Text="{Binding CurrentTag.ConnectMachine}" Height="28"/>

        <!-- 备注 -->
        <Label x:Name="lblRemark" Grid.Row="10" Grid.Column="0" Margin="5" VerticalAlignment="Top"/>
        <TextBox Grid.Row="10" Grid.Column="1" Margin="5" Text="{Binding CurrentTag.Remark}" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button x:Name="SaveButton" Width="80" Height="30" Margin="10" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Width="80" Height="30" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Page>