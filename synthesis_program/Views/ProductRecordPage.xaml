<Page x:Class="synthesis_program.Views.ProductRecordPage"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          Background="#FFEBEBEB">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 查询条件区域 -->
        <Border Grid.Row="0" Background="White" Padding="10"
                    BorderBrush="#FFCCCCCC" BorderThickness="0 0 0 1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- 机型 -->
                <StackPanel Margin="50,0">
                    <TextBlock Text="机型" Margin="0 0 0 2" TextAlignment="Center"/>
                    <ComboBox x:Name="prod_type" Width="150" Height="26" FontSize="14"
                                  BorderBrush="#FFCCCCCC" SelectedIndex="0"
                                  IsEditable="True" Loaded="ModelComboBox_Loaded"
                                  ItemsSource="{Binding machineKind}"
                                  SelectedItem="MachineKindSingle"
                                  SelectionChanged="prod_type_SelectionChanged">
                    </ComboBox>
                </StackPanel>

                <!-- 订单号 -->
                <StackPanel Margin="10,0">
                    <TextBlock Text="订单号" Margin="0 0 0 2" TextAlignment="Center"/>
                    <ComboBox x:Name="Order_No" Width="150" Height="26" FontSize="14"
                  BorderBrush="#FFCCCCCC" 
                  IsEditable="True" Loaded="OrderComboBox_Loaded" ItemsSource="{Binding orderNoList}" >
                    </ComboBox>
                </StackPanel>


                <!-- 查询按钮 -->
                <Button Content="查询" HorizontalAlignment="Right" Margin="200,0,0,0" Padding="20,5"
                            Background="#FFCCCCCC" Foreground="White"
                            FontWeight="Bold" Click="QueryButton_Click" Height="35"/>



                <Button Content="导出" HorizontalAlignment="Right" Margin="30,0,0,0" Padding="20,5"
                            Background="#FFCCCCCC" Foreground="White"
                            FontWeight="Bold" Click="ExportButton_Click" Height="35"/>
            </StackPanel>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>



            <!-- 数据区域 -->

            <Border Grid.Column="1" Margin="10,0,0,81" Background="White"
        BorderBrush="#FFCCCCCC" BorderThickness="1">
                <!-- 添加滚动容器 -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Auto"
                  Padding="0">
                    <!-- 数据表格 -->
                    <DataGrid Grid.Row="1" 
                x:Name="rateDataGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                SelectionMode="Single"
                SelectionUnit="FullRow"
                RowHeight="25"
                FontSize="15"
                ItemsSource="{Binding SourceList}"
                SelectedItem="{Binding RateListSingle}"
                Margin="0,0,0,0">
                        <!-- 移除底部margin -->
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Height" Value="30"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="日期" Binding="{Binding Date}" Width="Auto"/>
                            <DataGridTextColumn Header="线体" Binding="{Binding LineId}" Width="Auto"/>
                            <DataGridTextColumn Header="机型" Binding="{Binding MODEL}" Width="Auto"/>
                            <DataGridTextColumn Header="生产批号" Binding="{Binding BatchNo}" Width="Auto"/>
                            <DataGridTextColumn Header="批量" Binding="{Binding COMPLETED_QTY}" Width="Auto"/>
                            <DataGridTextColumn Header="版本" Binding="{Binding Version}" Width="Auto"/>
                            <DataGridTextColumn Header="整机料号" Binding="{Binding PartNo}" Width="Auto"/>
                            <DataGridTextColumn Header="生产编号范围" Binding="{Binding ProductCode}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Border>

            <Border Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Bottom" Background="White"
BorderBrush="#FFCCCCCC" BorderThickness="1" Height="62">
                <Label Name="lbl_warning"  Content="正在查询，请勿重复点击!" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="30" FontWeight="Bold" Foreground="Red"/>

            </Border>
        </Grid>
    </Grid>
</Page>
    